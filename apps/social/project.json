{
  "name": "social",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/social/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"],
        "packageJson": {
          "dependencies": {
            "pg": "^8.16.0"
          }
        }
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "add-pg-dependency": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/add-pg-dep.js dist/apps/social"
      },
      "dependsOn": ["build"]
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "social:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "social:build:development"
        },
        "production": {
          "buildTarget": "social:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "apps/social/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
