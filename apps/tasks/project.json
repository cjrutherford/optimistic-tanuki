{
  "name": "tasks",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/tasks/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"],
        "packageJson": {
          "dependencies": {
            "pg": "^8.16.0"
          }
        }
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "add-pg-dependency": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/add-pg-dep.js dist/apps/tasks"
      },
      "dependsOn": ["build"]
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "tasks:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "tasks:build:development"
        },
        "production": {
          "buildTarget": "tasks:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/tasks/jest.config.ts"
      }
    }
  }
}
