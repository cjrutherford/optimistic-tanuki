name: E2E Tests

on:
  pull_request:
    branches: [ main, develop ]
  push:
    branches: [ main, develop ]
  workflow_dispatch:

jobs:
  microservices-e2e:
    name: Microservices E2E Tests
    runs-on: ubuntu-latest
    timeout-minutes: 30
    
    strategy:
      matrix:
        service: 
          - authentication-e2e
          - profile-e2e
          - social-e2e
          - assets-e2e
          - blogging-e2e
          - gateway-e2e
      fail-fast: false
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Setup Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Run E2E tests for ${{ matrix.service }}
        run: npx nx e2e ${{ matrix.service }} --configuration=ci
        env:
          CI: true

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: test-results-${{ matrix.service }}
          path: |
            coverage/${{ matrix.service }}
            test-results/${{ matrix.service }}
          retention-days: 30

  ui-e2e:
    name: UI E2E Tests
    runs-on: ubuntu-latest
    timeout-minutes: 30
    
    strategy:
      matrix:
        app:
          - client-interface-e2e
          - forgeofwill-e2e
          - digital-homestead-e2e
          - christopherrutherford-net-e2e
      fail-fast: false
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright Browsers
        run: npx playwright install --with-deps

      - name: Run E2E tests for ${{ matrix.app }}
        run: npx nx e2e ${{ matrix.app }}
        env:
          CI: true

      - name: Upload Playwright report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: playwright-report-${{ matrix.app }}
          path: |
            dist/.playwright/apps/${{ matrix.app }}/playwright-report
            dist/.playwright/apps/${{ matrix.app }}/test-output
          retention-days: 30

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: test-results-${{ matrix.app }}
          path: test-results/${{ matrix.app }}
          retention-days: 30

  test-summary:
    name: Test Summary
    runs-on: ubuntu-latest
    needs: [microservices-e2e, ui-e2e]
    if: always()
    
    steps:
      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: artifacts

      - name: Display test results
        run: |
          echo "## E2E Test Results" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          
          echo "### Microservices Tests" >> $GITHUB_STEP_SUMMARY
          ls -la artifacts/test-results-*-e2e/ 2>/dev/null || echo "No microservice results found" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          
          echo "### UI Tests" >> $GITHUB_STEP_SUMMARY
          ls -la artifacts/playwright-report-*/ 2>/dev/null || echo "No UI test results found" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY

      - name: Check test status
        run: |
          if [ "${{ needs.microservices-e2e.result }}" == "success" ] && [ "${{ needs.ui-e2e.result }}" == "success" ]; then
            echo "✅ All E2E tests passed!"
            exit 0
          else
            echo "❌ Some E2E tests failed"
            echo "Microservices: ${{ needs.microservices-e2e.result }}"
            echo "UI: ${{ needs.ui-e2e.result }}"
            exit 1
          fi
